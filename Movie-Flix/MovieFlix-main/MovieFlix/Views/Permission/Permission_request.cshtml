
@{
    ViewBag.Title = "Permission_request";

    Layout = "~/Views/_LayoutPage1.cshtml";

    if (ViewBag.person == "admin")
    {
        Layout = "~/Views/_LayoutPageAdmin.cshtml";
    }
}

<body style="background-color:aqua">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Table #03</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4 class="text-center mb-4">Create Your Domain Name</h4>
                    <div class="table-wrap">
                        <table class="table">
                            <thead class="thead-primary">
                                <tr>
                                    <th>Request ID</th>
                                    <th>User ID</th>
                                    <th>Movie ID</th>
                                    <th>Mobile Number</th>
                                    <th>Transection Id</th>
                                    <th>Permission</th>
                                    @*<th>Approve</th>*@
                                </tr>
                            </thead>
                            @foreach (var x in ViewBag.Requests)
                            {
                                <tbody>
                                    <tr>
                                        @*<th scope="row" class="scope">.com</th>*@
                                        <td>@x.paymentId</td>
                                        <td>@x.userId</td>
                                        <td>@x.movieId</td>
                                        <td>@x.mobileNo</td>
                                        <td>@x.TransId</td>
                                        <td>@x.Permisson</td>
                                        @*@ApproveVariables.paymentId = @x.paymentId;
                                        @ApproveVariables.userId = @x.userId;
                                        @ApproveVariables.movieId = @x.movieId;
                                        @ApproveVariables.TransId =@x.TransId;
                                        @ApproveVariables.mobileNo = @x.mobileNo;
                                        @ApproveVariables.Permisson= @x.Permisson;*@

                                        @*<td><a href="" class="btn btn-primary">Approve</a></td>*@
                                    </tr>
                                </tbody>
                            }



                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</body>